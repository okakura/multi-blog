# Example environment configuration for telemetry

# Log level configuration
RUST_LOG=info,api=debug,sqlx=warn

# Log format: pretty (default), json, compact
LOG_FORMAT=pretty

# Enable OpenTelemetry tracing (set to true for production)
ENABLE_OPENTELEMETRY=false

# Enable metrics collection
ENABLE_METRICS=true

# Service identification
SERVICE_NAME=multi-blog-api
SERVICE_VERSION=0.1.0
ENVIRONMENT=development

# For production environments with OpenTelemetry
# OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:14268/api/traces
# OTEL_SERVICE_NAME=multi-blog-api
# OTEL_RESOURCE_ATTRIBUTES=service.version=0.1.0,deployment.environment=production
